<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hellohasan.android_firebase_notification.activity.MessageShowActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/featureGraphics"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_image"/>

        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is Headline"
            android:textSize="21sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/featureGraphics"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"/>

        <TextView
            android:id="@+id/timeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="12-12-2017 21:45"
            android:layout_below="@+id/header"
            android:paddingLeft="16dp"/>


        <TextView
            android:id="@+id/article"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is article."
            android:layout_below="@+id/timeStamp"
            android:textSize="14sp"
            android:padding="16dp"/>

    </RelativeLayout>


</ScrollView>
